{
  "name": "@music-quiz/server",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch --clear-screen=false ./index.ts",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:regenerate": "rm -rf ./drizzle && rm database.db && pnpm drizzle:generate && pnpm drizzle:migrate && pnpm drizzle:seed",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:seed": "tsx ./database/seed.ts"
  },
  "dependencies": {
    "@music-quiz/shared": "workspace:*",
    "@trpc/server": "11.5.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.5"
  }
}
